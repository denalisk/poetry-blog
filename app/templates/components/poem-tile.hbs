<h2>{{model.title}}</h2>
<h4>{{model.author}}</h4>
<p>
  {{model.date}}
</p>
<div class="">
  {{#each model.lines as |line|}}
  <p>
      {{line}}
  </p>
  {{/each}}
</div>
<div class="">
  <ul>
    {{#each model.tags as |new-tag|}}
    <li>
      {{new-tag}}
    </li>
    {{/each}}
  </ul>
</div>
<hr>
