<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input class="form-control" value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input class="form-control" value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="lines">Make your post</label>
    {{textarea rows="20" cols="100" class="form-control" value=lines id="lines"}}
  </div>
  <div class="form-group">
    <label for="tags">Tags</label>
    {{input class="form-control" value=tags id="tags"}}
  </div>
  <button type="button" class="btn btn-success" {{action 'savePost'}}>Make your post</button>
</form>
